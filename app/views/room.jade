extends main

block style
    !=css("/css/bootstrap.min.css")
    !=css("/css/jquery-ui-1.10.2.custom.min.css")
    !=css("/css/font-awesome.min.css")
    !=css("/css/jquery.jscrollpane.css")
    !=css("/css/introjs.css")
    !=css("/css/style.css")
    !=css("/css/room.css")
    !=css("/css/sidebar.css")
    !=css("/css/chatText.css")

block scripts
    !=js('/scripts/vendor/bootstrap.min.js')
    !=js("/scripts/vendor/jquery.ui.js")
    !=js("/scripts/vendor/jquery.mousewheel.js")
    !=js("/scripts/vendor/jquery.jscrollpane.js")
    !=js("/scripts/vendor/intro.js")
    !=js("/scripts/vendor/showdown.js")
    !=js("/scripts/vendor/ZeroClipboard.min.js")
    !=js("/scripts/modules/module.js")
    !=js('/scripts/connections.js')
    !=js('/scripts/commandManager.js')
    !=js('/scripts/buttonManager.js')
    script(type="text/javascript")
        window.Voicious.currentUser = {
            uid  : "#{uid}",
        };
        if ("#{wsHost}" !== "" && "#{wsPort}" !== "") {
            window.ws          = {
                Host : "#{wsHost}",
                Port : parseInt("#{wsPort}")
            };
        if ('!{modules}' != "") {
          window.modules = JSON.parse('!{modules}');
          };
        }
    !=js("/scripts/room.js")
    script(type="text/javascript", src="http://platform.twitter.com/widgets.js")
    audio#notification(src='')
block content
  div.container-fluid.fill-height
    div.row-fluid.fill-height
        div#sidebar.row-fluid.fill-height.left.color-one
          img#logo.center(src='/img/logo.png')
          div#userInfoCtn
            p#login(align="right") #{login}
            p#acl(align="right") #{trans.user}
          div#onOffCtn(data-step='0', data-intro='#{trans.mediaTuto}', data-position='right')
            button#cam.activable.red.color-one.bordered.shadowed
              i.icon-facetime-video.dark-grey
              span OFF
            button#mic.activable.red.color-one.bordered.shadowed
              i.icon-microphone.dark-grey
              span OFF
          div#sidebarAcc
        div#container.fill-height.color-two
          div#modArea.frame.fill-width
            ul#feeds.module.fill-height(data-step='2', data-intro='#{trans.feedsTuto}', data-position='right')
