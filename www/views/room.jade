extends main

block style
    link(rel="stylesheet", media="screen", type="text/css", href="/public/css/bootstrap.min.css")
    link(rel="stylesheet", media="screen", type="text/css", href="/public/css/jquery-ui-1.10.2.custom.min.css")
    link(rel="stylesheet", media="screen", type="text/css", href="/public/css/font-awesome.min.css")
    link(rel="stylesheet", media="screen", type="text/css", href="/public/css/jquery.jscrollpane.css")
    link(rel="stylesheet", media="screen", type="text/css", href="/public/css/introjs.css")
    link(rel="stylesheet", media="screen", type="text/css", href="/public/css/style.css")
    link(rel="stylesheet", media="screen", type="text/css", href="/public/css/room.css")

block scripts
    script(type='text/javascript', src='/public/js/vendor/bootstrap.min.js')
    script(type="text/javascript", src="/public/js/vendor/jquery.ui.js")
    script(type="text/javascript", src="/public/js/vendor/jquery.mousewheel.js")
    script(type="text/javascript", src="/public/js/vendor/jquery.jscrollpane.js")
    script(type="text/javascript", src="/public/js/vendor/intro.js")
    script(type="text/javascript", src="/public/js/vendor/showdown.js")
    script(type="text/javascript", src="/public/js/module.js")
    script(type='text/javascript', src='/public/js/connections.js')
    script(type="text/javascript")
        window.Voicious.currentUser = {
            uid  : "#{uid}",
            name : "#{login}"
        };
        window.Voicious.room        = "#{rid}"
        if ("#{wsHost}" !== "" && "#{wsPort}" !== "") {
            window.ws          = {
                Host : "#{wsHost}",
                Port : parseInt("#{wsPort}")
            };
        if ('!{modules}' != "") {
          window.modules = JSON.parse('!{modules}');
          };
        }
    script(type="text/javascript", src="/public/js/room.js")

block content
  div.container-fluid.fill-height
    div.row-fluid.fill-height
        div#sidebar.fill-height.left.color-one.column
            img#logo(src='/public/img/logo.png')
            p#login.textBtn #{login}
            span#acl #{trans.user}
            div#onOffCtn(data-step='1', data-intro='#{trans.mediaTuto}', data-position='right')
              button#cam.activable.red.color-one
                i.icon.iconMedia.icon-facetime-video.dark-grey
                span OFF
              button#mic.activable.red.color-one
                i.icon.iconMedia.icon-microphone.dark-grey
                span OFF
            div#sidebarAcc
              a#shareRoomLink(data-step='2', data-intro='#{trans.shareRoomTuto}', data-position='right')
                p#labelShareRoom
                  i.icon.iconOter.icon-share-alt
                  | #{trans.shareRoomID}
              div.accordionTab
                a#clipboardLink.accordionLink(style='display: none;')
                  p.labelOther
                    i.icon.iconOther.icon-copy
                    | #{trans.copyRoomID}
                a#inviteContactLink.accordionLink(style='display: none;')
                  p.labelOther
                    i.icon.iconOther.icon-plus
                    | #{trans.inviteContacts}
                a#twitterLink.accordionLink
                  p.labelOther
                    i.icon.iconOther.icon-twitter
                    | #{trans.shareOnTwitter}
                a#facebookLink.accordionLink
                  p.labelOther
                    i.icon.iconOther.icon-facebook-sign
                    | #{trans.shareOnFacebook}
              //a#manageRoomLink(style='display: none;', data-step='3', data-intro='#{trans.manageRoomTuto}', data-position='right')
              a#manageRoomLink(style='display: none;')
                span#manageRoomSpan.icon.iconOther.icon-wrench
                p#labelManageRoom #{trans.manageRoom}
              div.accordionTab
        div#content.fill-height.left.color-two
            div.fill-height.left.column
                ul#feeds(data-step='3', data-intro='#{trans.feedsTuto}', data-position='bottom')
            div#middle.fill-height.left.column(style='width:26%')
            div.fill-height.left.column
              div#mainCam.fill-height.video-wrapper
